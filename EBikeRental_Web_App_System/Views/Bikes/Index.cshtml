@model IEnumerable<EBikeRental_Web_App_System.Models.Bike>

@{
    ViewData["Title"] = "Index";
}

<h1>Bike Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Bikes" asp-action="Index">
    <p>
        Search Bike Model: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table text-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BikeModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeSpecs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPerDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BikeModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BikeSpecs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPerDay)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BikeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BikeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BikeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
